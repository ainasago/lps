@model List<TtsWebApp.Models.Article>
@{
    ViewData["Title"] = "文章管理"; 
}

<div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6 gap-3">
    <h1 class="text-2xl md:text-3xl font-bold text-gray-800">文章管理</h1>
    <a asp-action="CreateArticle" class="w-full md:w-auto px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition flex items-center justify-center text-sm md:text-base">
        <span class="material-symbols-outlined mr-2 text-lg md:text-xl">add</span>
        创建文章
    </a>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-3 md:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">标题</th>
                    <th class="px-3 md:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden md:table-cell">作者</th>
                    <th class="px-3 md:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">状态</th>
                    <th class="px-3 md:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden lg:table-cell">浏览量</th>
                    <th class="px-3 md:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden lg:table-cell">创建时间</th>
                    <th class="px-3 md:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
                </tr>
            </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="6" class="px-6 py-8 text-center text-gray-500">
                        <span class="material-symbols-outlined text-6xl text-gray-300 block mb-2">article</span>
                        暂无文章，点击上方按钮创建第一篇文章
                    </td>
                </tr>
            }
            else
            {
                @foreach (var article in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-3 md:px-6 py-3 md:py-4">
                            <div class="text-xs md:text-sm font-medium text-gray-900">@article.Title</div>
                            @if (!string.IsNullOrEmpty(article.Summary))
                            {
                                <div class="text-xs md:text-sm text-gray-500 truncate max-w-xs md:max-w-md">@article.Summary</div>
                            }
                        </td>
                        <td class="px-3 md:px-6 py-3 md:py-4 whitespace-nowrap text-xs md:text-sm text-gray-500 hidden md:table-cell">
                            @(article.Author ?? "-")
                        </td>
                        <td class="px-3 md:px-6 py-3 md:py-4 whitespace-nowrap">
                            @if (article.IsPublished)
                            {
                                <span class="px-1.5 md:px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                    <span class="hidden sm:inline">已发布</span>
                                    <span class="sm:hidden">发布</span>
                                </span>
                            }
                            else
                            {
                                <span class="px-1.5 md:px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                                    草稿
                                </span>
                            }
                        </td>
                        <td class="px-3 md:px-6 py-3 md:py-4 whitespace-nowrap text-xs md:text-sm text-gray-500 hidden lg:table-cell">
                            @article.ViewCount
                        </td>
                        <td class="px-3 md:px-6 py-3 md:py-4 whitespace-nowrap text-xs md:text-sm text-gray-500 hidden lg:table-cell">
                            @article.CreatedAt.ToString("yyyy-MM-dd")
                        </td>
                        <td class="px-3 md:px-6 py-3 md:py-4 whitespace-nowrap text-xs md:text-sm">
                            <div class="flex gap-2">
                                <a asp-action="EditArticle" asp-route-id="@article.Id" 
                                   class="inline-flex items-center px-2 md:px-3 py-1 md:py-1.5 bg-blue-600 hover:bg-blue-700 text-white rounded text-xs md:text-sm transition" 
                                   title="编辑文章">
                                    <span class="material-symbols-outlined text-sm md:text-base mr-1">edit</span>
                                    <span class="hidden sm:inline">编辑</span>
                                </a>
                                <form method="post" asp-action="DeleteArticle" asp-route-id="@article.Id" 
                                      class="inline" onsubmit="return confirm('确定要删除这篇文章吗？')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" 
                                            class="inline-flex items-center px-2 md:px-3 py-1 md:py-1.5 bg-red-600 hover:bg-red-700 text-white rounded text-xs md:text-sm transition"
                                            title="删除文章">
                                        <span class="material-symbols-outlined text-sm md:text-base mr-1">delete</span>
                                        <span class="hidden sm:inline">删除</span>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
        </table>
    </div>
</div>

@if (ViewBag.TotalPages > 1)
{
    <div class="mt-6 flex justify-center">
        <nav class="flex space-x-2">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <a asp-action="Articles" asp-route-page="@i" 
                   class="px-4 py-2 @(i == ViewBag.Page ? "bg-blue-600 text-white" : "bg-white text-gray-700 hover:bg-gray-50") border rounded-lg">
                    @i
                </a>
            }
        </nav>
    </div>
}
