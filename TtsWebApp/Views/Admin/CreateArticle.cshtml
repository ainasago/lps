@model TtsWebApp.Models.Article
@{
    ViewData["Title"] = "创建文章"; 
}

<div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">创建文章</h1>
</div>

<div class="bg-white rounded-lg shadow p-6">
    <form method="post" asp-action="CreateArticle">
        @Html.AntiForgeryToken()
        
        <div class="space-y-6">
            <div>
                <label for="Title" class="block text-gray-700 font-medium mb-2">
                    标题 <span class="text-red-500">*</span>
                </label>
                <input type="text" id="Title" name="Title" required
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                       placeholder="请输入文章标题" />
                <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
            </div>
            
            <div>
                <label for="Summary" class="block text-gray-700 font-medium mb-2">
                    摘要
                </label>
                <input type="text" id="Summary" name="Summary"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                       placeholder="请输入文章摘要（可选）" />
            </div>
            
            <div>
                <label for="Content" class="block text-gray-700 font-medium mb-2">
                    内容 <span class="text-red-500">*</span>
                </label>
                <textarea id="Content" name="Content" required class="w-full"
                          placeholder="请输入文章内容"></textarea>
                <p class="text-sm text-gray-500 mt-2">
                    支持富文本编辑，包括格式化、链接、图片、表格等。
                </p>
                <span asp-validation-for="Content" class="text-red-500 text-sm"></span>
            </div>
            
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label for="Author" class="block text-gray-700 font-medium mb-2">
                        作者
                    </label>
                    <input type="text" id="Author" name="Author"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                           placeholder="请输入作者名称（可选）" />
                </div>
                
                <div>
                    <label for="Tags" class="block text-gray-700 font-medium mb-2">
                        标签
                    </label>
                    <input type="text" id="Tags" name="Tags"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                           placeholder="多个标签用逗号分隔" />
                </div>
            </div>
            
            <div>
                <label class="flex items-center">
                    <input type="checkbox" id="IsPublished" name="IsPublished" value="true"
                           class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                    <span class="ml-2 text-gray-700">立即发布</span>
                </label>
                <p class="text-sm text-gray-500 mt-1">不勾选则保存为草稿</p>
            </div>
        </div>
        
        <div class="mt-8 flex justify-end space-x-4">
            <a asp-action="Articles" class="px-6 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition">
                取消
            </a>
            <button type="submit" class="px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition flex items-center">
                <span class="material-symbols-outlined mr-2">save</span>
                保存文章
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- TinyMCE -->
    <script src="~/lib/tinymce/js/tinymce/tinymce.min.js"></script>
    <script>
        tinymce.init({
            selector: '#Content',
            height: 600,
            menubar: true,
            plugins: [
                'advlist', 'autolink', 'lists', 'link', 'image', 'charmap', 'preview',
                'anchor', 'searchreplace', 'visualblocks', 'code', 'fullscreen',
                'insertdatetime', 'media', 'table', 'help', 'wordcount', 'emoticons',
                'template', 'paste', 'directionality', 'textcolor', 'colorpicker'
            ],
            toolbar1: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | tinycomments | checklist numlist bullist indent outdent | emoticons charmap | removeformat',
            toolbar2: 'forecolor backcolor | code fullscreen preview | help',
            image_advtab: true,
            image_title: true,
            automatic_uploads: true,
            file_picker_types: 'image',
            paste_data_images: true,
            content_style: 'body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif; font-size: 14px; }',
            setup: function (editor) {
                editor.on('change', function () {
                    editor.save();
                });
            },
            language: 'en_US',
            directionality: 'ltr',
            branding: false,
            promotion: false,
            contextmenu: 'link image table configurepermanentpen',
            table_default_attributes: {
                border: '0',
                cellpadding: '0',
                cellspacing: '0',
                width: '100%',
                style: 'border-collapse: collapse;'
            },
            table_default_styles: {
                width: '100%',
                'border-collapse': 'collapse'
            }
        });
    </script>
}

