@model TtsWebApp.Models.Article?

@if (Model == null)
{
    <section class="py-16 px-4">
        <div class="container mx-auto max-w-4xl text-center">
            <span class="material-symbols-outlined text-slate-300 dark:text-slate-700 text-8xl block mb-4">error</span>
            <h1 class="text-3xl font-bold text-slate-900 dark:text-white mb-4">页面未找到</h1>
            <p class="text-slate-600 dark:text-slate-400 mb-8">该页面内容暂未配置，请联系管理员。</p>
            <a href="/" class="text-primary hover:text-primary/80">返回首页</a>
        </div>
    </section>
}
else
{
    <div class="prose prose-slate dark:prose-invert max-w-none">
        @Html.Raw(Model.Content.Replace("\n", "<br/>"))
    </div>
    
    <div class="mt-6 text-center text-sm text-slate-500 dark:text-slate-400">
        最后更新: @Model.UpdatedAt.ToString("yyyy年MM月dd日")
    </div>
}

<style>
    .prose {
        font-size: 1.125rem;
        line-height: 1.75;
    }
    .prose p {
        margin-bottom: 1.25rem;
    }
    .prose h2 {
        font-size: 1.875rem;
        font-weight: 700;
        margin-top: 2rem;
        margin-bottom: 1rem;
        color: var(--tw-prose-headings);
    }
    .prose h3 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-top: 1.5rem;
        margin-bottom: 0.75rem;
        color: var(--tw-prose-headings);
    }
    .prose ul, .prose ol {
        margin-left: 1.5rem;
        margin-bottom: 1.25rem;
    }
    .prose li {
        margin-bottom: 0.5rem;
    }
</style>
