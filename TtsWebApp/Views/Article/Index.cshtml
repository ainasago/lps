@model List<TtsWebApp.Models.Article>
@{
    ViewData["Title"] = "文章列表";
}

<section class="py-16 px-4">
    <div class="container mx-auto max-w-6xl">
        <h1 class="text-4xl font-bold text-slate-900 dark:text-white mb-8 text-center">文章列表</h1>
        
        @if (Model.Count == 0)
        {
            <div class="text-center py-16">
                <span class="material-symbols-outlined text-slate-300 dark:text-slate-700 text-8xl block mb-4">article</span>
                <p class="text-slate-600 dark:text-slate-400 text-lg">暂无文章</p>
            </div>
        }
        else
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var article in Model)
                {
                    <article class="hover:bg-white/30 dark:hover:bg-white/5 rounded-xl p-6 transition-all">
                        <div>
                            <h2 class="text-xl font-bold text-slate-900 dark:text-white mb-3 line-clamp-2">
                                <a asp-action="Detail" asp-route-id="@article.Id" class="hover:text-primary">
                                    @article.Title
                                </a>
                            </h2>
                            
                            @if (!string.IsNullOrEmpty(article.Summary))
                            {
                                <p class="text-slate-600 dark:text-slate-400 mb-4 line-clamp-3">
                                    @article.Summary
                                </p>
                            }
                            
                            <div class="flex items-center justify-between text-sm text-slate-500 dark:text-slate-400">
                                <div class="flex items-center gap-4">
                                    @if (!string.IsNullOrEmpty(article.Author))
                                    {
                                        <span class="flex items-center">
                                            <span class="material-symbols-outlined text-sm mr-1">person</span>
                                            @article.Author
                                        </span>
                                    }
                                    <span class="flex items-center">
                                        <span class="material-symbols-outlined text-sm mr-1">visibility</span>
                                        @article.ViewCount
                                    </span>
                                </div>
                                <span>@((article.PublishedAt ?? article.CreatedAt).ToString("yyyy-MM-dd"))</span>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(article.Tags))
                            {
                                <div class="mt-4 flex flex-wrap gap-2">
                                    @foreach (var tag in article.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                    {
                                        <span class="px-2 py-1 bg-primary/10 text-primary text-xs rounded">
                                            @tag.Trim()
                                        </span>
                                    }
                                </div>
                            }
                            
                            <div class="mt-4 pt-4 border-t border-slate-200 dark:border-slate-800">
                                <a asp-action="Detail" asp-route-id="@article.Id" 
                                   class="text-primary hover:text-primary/80 font-medium flex items-center">
                                    阅读全文
                                    <span class="material-symbols-outlined text-sm ml-1">arrow_forward</span>
                                </a>
                            </div>
                        </div>
                    </article>
                }
            </div>
            
            @if (ViewBag.TotalPages > 1)
            {
                <div class="mt-12 flex justify-center">
                    <nav class="flex space-x-2">
                        @if (ViewBag.Page > 1)
                        {
                            <a asp-action="Index" asp-route-page="@(ViewBag.Page - 1)" 
                               class="px-4 py-2 bg-white dark:bg-slate-800 text-slate-700 dark:text-slate-300 border border-slate-300 dark:border-slate-700 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-700">
                                上一页
                            </a>
                        }
                        
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <a asp-action="Index" asp-route-page="@i" 
                               class="px-4 py-2 @(i == ViewBag.Page ? "bg-primary text-white" : "bg-white dark:bg-slate-800 text-slate-700 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700") border border-slate-300 dark:border-slate-700 rounded-lg">
                                @i
                            </a>
                        }
                        
                        @if (ViewBag.Page < ViewBag.TotalPages)
                        {
                            <a asp-action="Index" asp-route-page="@(ViewBag.Page + 1)" 
                               class="px-4 py-2 bg-white dark:bg-slate-800 text-slate-700 dark:text-slate-300 border border-slate-300 dark:border-slate-700 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-700">
                                下一页
                            </a>
                        }
                    </nav>
                </div>
            }
        }
    </div>
</section>
